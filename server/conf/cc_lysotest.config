/*
    sis3316:
        max. 16 MWords/channel
        16 channels/module
         3 modules
        --> max. event < 1 GWords
        --> max. cluster < 2 GWords

    for 'small' computers:
        hostmem 8 GByte
        CLUSTER_MAX=2*EVENT_MAX
        OUT_MAX=EVENT_MAX
        hostmem=CLUSTER_NUM*CLUSTER_MAX+OUT_MAX
        hostmem=CLUSTER_NUM*EVENT_MAX*2+EVENT_MAX
        hostmem=EVENT_MAX*(2*CLUSTER_NUM+1)

        Ziel: hostmem 8..10 GByte, CLUSTER_MAX=4
        --> EVENT_MAX=268435456 (1 GByte)
        --> max. 550000 Words/channel
 */

#define SMALL_COMPUTER

%undef  OUT_MAX
/*
    these numbers are in units of 32-bit-words
    EVENT_MAX and OUT_MAX should have the same size
    CLUSTER_MAX must not be smaller than EVENT_MAX
    all three must not exeed 2**32-1
*/
#ifdef SMALL_COMPUTER
%define CLUSTER_NUM 4
%define EVENT_MAX   268435456ULL /* 1 GiByte */
%define CLUSTER_MAX 536870912ULL /* 2 GiByte */
%define OUT_MAX     268435456ULL
#else
%define CLUSTER_NUM 16
%define EVENT_MAX   1073741824ULL /* 4 GiByte */
%define CLUSTER_MAX 2147483648ULL /* 8 GiByte */
%define OUT_MAX     1073741824ULL
#endif

